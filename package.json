{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint --no-inline-config",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "e2e": "playwright test",
    "test:e2e": "pnpm e2e",
    "verify": "pnpm lint && pnpm typecheck && pnpm build && pnpm e2e",
    "ci:quality": "pnpm lint && pnpm format:check && pnpm typecheck",
    "test:unit": "echo \"No unit tests defined. Add vitest/jest and replace this script.\" && exit 0",
    "test:api:smoke": "newman run tests/api/one-link.postman.json -r cli,htmlextra --reporter-htmlextra-export artifacts/api-tests/newman-smoke.html --timeout-request 10000 --delay-request 50",
    "test:api:security": "newman run tests/api/one-link.postman.json --folder 'Security - SQLi attempt' -r cli,htmlextra --reporter-htmlextra-export artifacts/api-tests/newman-security.html --timeout-request 10000",
    "test:api:contract": "swagger-cli validate tests/api/openapi.yml",
    "test:api:perf": "artillery run tests/api/perf/artillery.yml -o artifacts/api-tests/artillery-report.json",
    "ci:api": "mkdir -p artifacts/api-tests && pnpm test:api:contract && pnpm test:api:smoke && pnpm test:api:security && pnpm test:api:perf",
    "seed:influencer-shops": "node scripts/seed-influencer-shops-dev.mjs",
    "seed:influencer-shops:allow": "cross-env ALLOW_DEV_SEEDING=true NODE_ENV=development node scripts/seed-influencer-shops-dev.mjs",
    "db:verify": "node scripts/verify-db.mjs",
    "format:check": "prettier -c .",
    "brand:extract": "node scripts/extract-brand-palette.mjs",
    "brand:extract:url": "node scripts/extract-brand-palette.mjs --url=http://localhost:3000",
    "admin:set-password": "node scripts/set-admin-password.mjs",
    "analyze-failures": "node scripts/analyze-test-failures.js"
  },
